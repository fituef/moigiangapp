@{
    ViewBag.Title = "THÊM LỊCH MỜI GIẢNG";
}

<style>
    .card {
        box-shadow: none !important;
    }
</style>
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h3>QUẢN LÝ LỊCH MỜI GIẢNG</h3>
            @if (Session["Success"] != null)
            {
                <div class="alert alert-success pull-right" id="successAlert" style="transition: opacity 0.5s; display:contents">@Session["Success"].ToString()</div>
                { Session["Success"] = null; }
            }
            @if (Session["Error"] != null)
            {
                <div class="alert alert-danger pull-right" id="errorAlert" style="transition: opacity 0.5s; display: contents">@Session["Error"]</div>
                { Session["Error"] = null; }
            }
        </div>
        <div class="card-block">
            <!-- Row start -->
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="sub-title"><strong>CẬP NHẬT LỊCH MỜI GIẢNG CHO HỌC KỲ</strong></div>
                    <!-- Tab panes -->
                    <div class="tab-content tabs card-block">
                        <div class="card">
                            <form id="uploadForm" action="/Home/UploadExcel" enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()

                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Năm học <span class="text-danger">*</span></label>
                                        @Html.DropDownList("NamHocId",
                                            new SelectList(ViewBag.NamHocs, "Id", "TenNamHoc"),
                                            "-- Chọn năm học --",
                                            new { @class = "form-control", required = "required" })
                                    </div>

                                    <div class="col-md-3">
                                        <label>Học kỳ <span class="text-danger">*</span></label>
                                        @Html.DropDownList("HocKyId",
                                            new SelectList(ViewBag.HocKys, "Id", "TenHocKy"),
                                            "-- Chọn học kỳ --",
                                            new { @class = "form-control", required = "required" })
                                    </div>

                                    <div class="col-md-3">
                                        <label>Ngành <span class="text-danger">*</span></label>
                                        @Html.DropDownList("NganhId",
                                            new SelectList(ViewBag.Nganhs, "Id", "TenNganh"),
                                            "-- Chọn ngành --",
                                            new { @class = "form-control", required = "required" })
                                    </div>

                                    <div class="col-md-3">
                                        <label>File Excel <span class="text-danger">*</span></label>
                                        <input type="file" id="file" name="file" class="form-control" accept=".xlsx" required />
                                    </div>
                                </div>

                                <div class="mt-3 pull-right">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-upload"></i> THỰC HIỆN
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row end -->
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        var element = document.getElementById('errorAlert');
        if (element) {
            element.style.opacity = '0';
            setTimeout(function () {
                element.style.display = 'none';
            }, 500);
        }
        var element2 = document.getElementById('successAlert');
        if (element2) {
            element2.style.opacity = '0';
            setTimeout(function () {
                element2.style.display = 'none';
            }, 500);
        }
    }, 5000);
</script> 
