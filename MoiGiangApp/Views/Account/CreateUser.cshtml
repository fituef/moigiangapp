<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
@model MoiGiangApp.Models.CreateUserViewModel
@{
    ViewBag.Title = "Tạo User Mới";
}
<style>
    .btn {
        border-radius: 0px !important;
    }
</style>
<style>
    .form-check-custom .form-check-input {
        width: 1.4em;
        height: 1.4em;
        margin-top: 0;
        border: 2px solid #ccc;
        border-radius: 6px;
        transition: all 0.2s ease;
        cursor: pointer;
    }

        .form-check-custom .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.25);
        }

        .form-check-custom .form-check-input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.25);
        }

    .form-check-custom .form-check-label {
        margin-left: 0.5rem;
        font-weight: 500;
        color: #333;
        cursor: pointer;
        user-select: none;
    }

    .form-check-custom:hover .form-check-input {
        border-color: #0d6efd;
    }

    .role-name {
        font-size: 0.95rem;
        padding: 0.2rem 0;
    }

    .role-list::-webkit-scrollbar {
        width: 8px;
    }

    .role-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .role-list::-webkit-scrollbar-thumb {
        background: #c0c0c0;
        border-radius: 10px;
    }

        .role-list::-webkit-scrollbar-thumb:hover {
            background: #a0a0a0;
        }
</style>

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    } 
    @using (Html.BeginForm("CreateUser", "Account", FormMethod.Post, new { @class = "needs-validation" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">THÊM MỚI NGƯỜI DÙNG</h4>
                    <div class="card-body">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <!-- LecturerID -->
                        <div class="mb-3">
                            <i class="fas fa-id-card text-primary"></i>
                            @Html.LabelFor(m => m.LecturerID, "MÃ GIẢNG VIÊN", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.LecturerID, new { @class = "form-control", placeholder = "VD: HIEUHV19021995" })
                            @Html.ValidationMessageFor(m => m.LecturerID, "", new { @class = "text-danger" })
                        </div>
                        <!-- LecturerID -->
                        <div class="mb-3">
                            <i class="fas fa-user text-primary"></i>
                            @Html.LabelFor(m => m.HoTen, "TÊN GIẢNG VIÊN", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "VD: Hoàng Văn Hiếu" })
                            @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                        </div>
                        <!-- Email -->
                        <div class="mb-3">
                            <i class="fas fa-envelope text-primary"></i>
                            @Html.LabelFor(m => m.Email,"EMAIL", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "VD:hieuhv@uef.edu.vn" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <i class="fas fa-lock text-primary"></i>
                            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "******" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>



                        <!-- Roles -->
                        <!-- PHẦN ROLE -->
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark mb-3">
                                <i class="fas fa-user-shield text-primary"></i> CHỌN VAI TRÒ
                            </label>
                            <div class="role-container p-3 bg-gradient border-0 rounded-4 shadow-sm"
                                 style="max-height: 320px; overflow-y: auto; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                @foreach (var role in (MultiSelectList)ViewBag.Roles)
                                {
                                    var isTruongNganh = role.Value.StartsWith("TruongNganh");
                                    var icon = isTruongNganh ? "fas fa-crown text-warning" : "fas fa-user-tag text-secondary";
                                    var badge = isTruongNganh ? $"<span class='badge bg-warning text-dark ms-2 fs-6'>Trưởng ngành</span>" : "";

                                    <div class="role-item mb-3 p-3 rounded-3 transition-all"
                                         style="background: white; border: 1px solid #dee2e6; cursor: pointer;">
                                        <div class="form-check d-flex align-items-center m-0">
                                            <input class="form-check-input role-checkbox modern-checkbox"
                                                   type="checkbox"
                                                   name="SelectedRoles"
                                                   value="@role.Value"
                                                   id="role_@role.Value" />
                                            <label class="form-check-label d-flex align-items-center w-100"
                                                   for="role_@role.Value" style="cursor: pointer;">
                                                <i class="@icon me-3"></i>
                                                <span class="fw-medium text-dark">@role.Text</span>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Nganh -->
                        <div class="mb-3" id="nganh-div">
                            @Html.LabelFor(m => m.NganhId, "CHỌN NGÀNH PHỤ TRÁCH", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.NganhId,
                                (SelectList)ViewBag.Nganhs,
                                "-- Chọn ngành --",
                                new { @class = "form-select form-control", @id = "NganhId" })
                            @Html.ValidationMessageFor(m => m.NganhId, "", new { @class = "text-danger" })
                        </div>
                         <!-- Nganh -->
                        <div class="mb-3" id="nganh-div">
                            @Html.LabelFor(m => m.Nganhgd, "CHỌN NGÀNH GIẢNG DẠY", new { @class = "form-label" })
                            @Html.DropDownListFor(m => m.Nganhgd,
                                (SelectList)ViewBag.Nganhs,
                                "-- Chọn ngành --",
                                new { @class = "form-select form-control", @id = "Nganhgd" })
                            @Html.ValidationMessageFor(m => m.Nganhgd, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex gap-2 pull-right">
                            <button type="submit" class="btn btn-success">THÊM MỚI</button>
                            <a href="@Url.Action("Index")" class="btn btn-danger">HỦY</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}
</div>